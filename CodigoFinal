/**
 *
 * @author USER
 */
public class Proyecto {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
      
    Estudiante estudiante= new Estudiante();
    Deportista deportista= new Deportista();
    Medico medico= new Medico();
    
   System.out.println("Primera Persona\n");
   estudiante.imprimirInformacion();
   estudiante.imprimirInformacionEstudiante();
   
     System.out.println("Segunda Persona\n");
     deportista.imprimirInformacion();
     deportista.imprimirInformacionDeportista();
     
     System.out.println("Tercera Persona\n");
     medico.imprimirInformacion();
     medico.imprimirInformacionMedico();
   
           }
    
}

